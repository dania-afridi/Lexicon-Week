@model List<Assignment_01.Models.Entities.Person>
@{
    ViewData["Title"] = "People Table";
}
<div>
    
    <h1>People Table</h1>
    <h3>Search Person</h3>
    <form asp-action="Index" method="get">
        <input type="text" name="SearchPerson" placeholder="Search by Name or City"/>
        <input type="submit" name="Search" value="Search" class="btn-primary"/>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.City</td>
                   <td><a asp-action="Details" asp-route-id ="@person.Id">View Details</a></td>
                </tr>
            }
        </tbody>
    </table> 
</div>
